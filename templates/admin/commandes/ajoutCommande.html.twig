{% extends 'baseAdmin.html.twig' %}

{% block body %}
   <div class="container-scroller">
      <div class="container-fluid page-body-wrapper ">
        <div class="main-panel col-lg-12">
        <div class="d-flex justify-content-end">
          <div class="content-wrapper">
             <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ajouter commande</h4>
                    
                    <form action="" method="post" id="commandForm">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="code">Code:</label>
                                    <input type="text" class="form-control" id="code" name="code" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="client">Client:</label>
                                    <select class="form-control" id="client" name="client" required>
                                        <option value="" selected>Choisir un client</option>
                                        {% for client in clients %}
                                            <option value="{{ client.id }}">{{ client.nomprenom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="date">Date</label>
                                    <input type="date" class="form-control" id="date" name="date" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="ttva">TTVA:</label>
                                    <input type="number" step="0.01" class="form-control" id="ttva" name="ttva" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="remise">Remise:</label>
                                    <input type="number" step="0.01" class="form-control" id="remise" name="remise" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="timbre">Timbre:</label>
                                    <input type="number" step="0.01" class="form-control" id="timbre" name="timbre" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="materiel">Materiel:</label>
                                    <div id="materielContainer">
                                        <div class="materielSelectContainer row">
                                            <div class="col-md-4">
                                                <select class="form-control materielSelect" name="materiel[]" required>
                                                    <option value="">Choisir un materiel</option>
                                                    {% for materiel in materiels %}
                                                        <option value="{{ materiel.id }}">{{ materiel.nom }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="number" class="form-control quantityInput" name="quantity[]" placeholder="Quantity" required>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="number" class="form-control priceInput" name="price[]" placeholder="Prix" required>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" id="addMateriel" class="btn btn-primary mt-2">+</button>
                                    <button type="button" id="removeMateriel" class="btn btn-danger mt-2">-</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mt-5">
                                <input type="submit" class="btn btn-success" value="Confirmer la commande">
                            </div>
                        </div>
                    </form>
                </div>








                  </div>
                </div>
              </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


<!-- Button trigger modal -->

    


<script>
document.getElementById('addMateriel').addEventListener('click', function() {
    // Get the first select container
    var selectContainer = document.querySelector('.materielSelectContainer');

    // Create a new select container and select element, and set their attributes
    var newSelectContainer = selectContainer.cloneNode(true);
    var newSelect = newSelectContainer.querySelector('.materielSelect');
    newSelect.value = "";

    // Create a new quantity input and set its attributes
    var newQuantityInput = newSelectContainer.querySelector('.quantityInput');
    newQuantityInput.value = "";

    // Create a new price input and set its attributes
    var newPriceInput = newSelectContainer.querySelector('.priceInput');
    newPriceInput.value = "";

    // Append the new select container to the materiel container
    document.getElementById('materielContainer').appendChild(newSelectContainer);
});

document.getElementById('removeMateriel').addEventListener('click', function() {
    // Get all select containers
    var selectContainers = document.querySelectorAll('.materielSelectContainer');

    // Remove the last select container if there is more than one
    if (selectContainers.length > 1) {
        selectContainers[selectContainers.length - 1].remove();
    }
});
</script>




{% endblock %}
