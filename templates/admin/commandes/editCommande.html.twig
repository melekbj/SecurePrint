{% extends 'baseAdmin.html.twig' %}

{% block body %}
   <div class="container-scroller">
      <div class="container-fluid page-body-wrapper ">
        <div class="main-panel col-lg-12">
        <div class="d-flex justify-content-end">
          <div class="content-wrapper">
             <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Modifier commande</h4>

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form action="" method="post" id="commandForm">
                        <!-- ... -->
                        <div class="form-group">
                            <label for="type">Type:</label>
                            <select class="form-control" id="type" name="type" required>
                                <option value="devis" {% if commande.type == 'devis' %}selected{% endif %}>Devis</option>
                                <option value="facture" {% if commande.type == 'facture' %}selected{% endif %}>Facture</option>
                            </select>
                        </div>
                        <!-- ... -->
                        <!-- ... -->
                        <div class="form-group">
                            <label for="code">Code:</label>
                            <input type="text" class="form-control" id="code" name="code" required unique value="{{ commande.code }}">
                        </div>
                        <!-- ... -->
                        <div class="form-group">
                            <label for="client">Client:</label>
                            <select class="form-control" id="client" name="client" required>
                                <option value="" selected>Choisir un client</option>
                                {% for client in clients %}
                                    <option value="{{ client.id }}" {% if client.id == commande.client.id %}selected{% endif %}>{{ client.nomprenom }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <!-- ... -->
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" class="form-control" id="date" name="date" required value="{{ commande.date|date('Y-m-d') }}">
                        </div>
                        <!-- ... -->
                        <div class="form-group">
                            <label for="timbre">Timbre:</label>
                            <input type="number" step="0.01" class="form-control" id="timbre" name="timbre" required value="{{ commande.timbre }}">
                        </div>
                        <!-- ... -->
                        {% for commandeMateriel in commande.commandeMateriels %}
                            <div class="materielSelectContainer row">
                                <div class="col-md-4">
                                    <select class="form-control materielSelect" name="materiel[]" required>
                                        <option value="">Choisir un materiel</option>
                                        {% for materiel in materiels %}
                                            <option value="{{ materiel.id }}" {% if materiel.id == commandeMateriel.materiel.id %}selected{% endif %}>{{ materiel.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="number" class="form-control quantityInput" name="quantity[]" placeholder="Qte" min="0" required value="{{ commandeMateriel.qte }}">
                                </div>
                                <div class="col-md-2">
                                    <input type="number" class="form-control priceInput" name="price[]" placeholder="Prix" min="0" required value="{{ commandeMateriel.prix }}">
                                </div>
                            </div>
                        {% endfor %}
                        <button type="button" id="addMateriel" class="btn btn-primary mt-2">+</button>
                        <button type="button" id="removeMateriel" class="btn btn-danger mt-2">-</button>
                        <!-- ... -->
                        <div class="row">
                            <div class="col-md-12 mt-5">
                                <input type="submit" class="btn btn-success" value="Confirmer la commande">
                            </div>
                        </div>
                    </form>

                </div>








                  </div>
                </div>
              </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


<!-- Button trigger modal -->

    


<script>
document.getElementById('addMateriel').addEventListener('click', function() {
    // Get the first select container
    var selectContainer = document.querySelector('.materielSelectContainer');

    // Create a new select container and select element, and set their attributes
    var newSelectContainer = selectContainer.cloneNode(true);

    // Reset the values of the select and input fields in the new select container
    var newSelect = newSelectContainer.querySelector('.materielSelect');
    newSelect.value = "";
    var newQuantityInput = newSelectContainer.querySelector('.quantityInput');
    newQuantityInput.value = "";
    var newPriceInput = newSelectContainer.querySelector('.priceInput');
    newPriceInput.value = "";

    // Append the new select container to the materiel container
    document.getElementById('materielContainer').appendChild(newSelectContainer);
});

document.getElementById('removeMateriel').addEventListener('click', function() {
    // Get all select containers
    var selectContainers = document.querySelectorAll('.materielSelectContainer');

    // Remove the last select container if there is more than one
    if (selectContainers.length > 1) {
        selectContainers[selectContainers.length - 1].remove();
    }
});
</script>




{% endblock %}
