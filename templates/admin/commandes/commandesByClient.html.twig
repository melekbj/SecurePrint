{% extends 'baseAdmin.html.twig' %}


{% block body %}
   <div class="container-scroller">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel col-lg-12">
            <div class="d-flex justify-content-end">
                {# <a class="btn btn-primary" href="{{path('app_ajout_commande')}}">Ajouter commande +</a> #}
            </div>
            <div class="content-wrapper">
                <h3 class="text-center text-github font-weight-bold my-4">Liste des commandes</h3>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Client</th>
                            <th>Code</th>
                            <th>Materiel</th>
                            <th>Quantite</th>
                            <th>PU.H.T</th>
                            <th>TTVA</th>
                            <th>REMISE</th>
                            <th>TIMBRE</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for c in commandes %}
                          {% for commandeMateriel in commandeMateriels[c.id] %}
                            <tr>
                                <td>{{c.client.nomprenom}}</td>
                                <td>{{c.code}}</td>
                                <td>{{commandeMateriel.materiel.nom}}</td> <!-- Display the Materiel -->
                                <td>{{c.qte}}</td>
                                <td>{{c.puht}}</td>
                                <td>{{c.ttva}}</td>
                                <td>{{c.remise}}</td>
                                <td>{{c.timbre}}</td>
                                <td>{{c.date|date('d-m-Y')}}</td>
                                <td>
                                    <div class="dropdown">
                                        <a class="dropdown-toggle" href="#" role="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="actionsDropdown">
                                          <li><a type="submit" class="dropdown-item" href="{{path('app_update_commande',{'id':c.id})}}"><i class="fas fa-edit"></i> Edit</a></li>
                                          <li><a onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce matériel ?')" type="submit" class="dropdown-item" href="{{path('app_delete_commande',{'id':c.id})}}"><i class="fas fa-trash-alt"></i> Delete</a></li>
                                          <li><a type="submit" class="dropdown-item" href="{{path('generate_pdf',{'clientId':client.id, 'commandId':c.id})}}"><i class="fas fa-edit"></i> Imprimer devis</a></li>

                                      
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
