{% extends 'baseAdmin.html.twig' %}


{% block body %}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-center text-github font-weight-bold my-4">Liste des clients</h2>
                <button type="button" class="btn btn-primary btn-fw col-lg-1 float-right" data-toggle="modal" data-target="#addClient">Ajouter Client +</button>
            </div>
        </div>
    </div>
</div>



<div class="container-scroller">
    <div class="container-fluid page-body-wrapper">
        <div class="main-panel col-lg-12">
            <div class="content-wrapper">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class=" border-primary mb-3">
                    
                    
                    
                    <div class="">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Nom et Prenom</th>
                                    <th>adresse</th>
                                    <th>ville</th>
                                    <th>phone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for c in users %}
                                    <tr>
                                        <td>{{c.nomprenom}}</td>
                                        <td>{{c.adresse}}</td>
                                        <td>{{c.ville}}</td>
                                        <td>{{c.phone}}</td>
                                        <td>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" href="#" role="button" id="actionsDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="actionsDropdown">
                                                    <li><a class="dropdown-item" href="{{path('app_edit_client',{'id':c.id})}}"><i class="fas fa-edit"></i> Modifier</a></li>
                                                    <li><a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur?')" class="dropdown-item" href="{{path('app_delete_client',{'id':c.id})}}"><i class="fas fa-trash-alt"></i> Supprimer</a></li>
                                                    <li><a class="dropdown-item" href="{{path('app_more',{'id':c.id})}}">More ..</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="addClient" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-github" id="exampleModalLabel">Ajouter nouveau client</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <style>
        ::placeholder {
            color: gray;
        }
    </style>
      <div class="modal-body">
            {{ form_start(addClient) }}
            <div class="mb-2">
                {{ form_widget(addClient.nom_prenom, {'attr': {'class': 'form-control', 'placeholder': 'Nom et Prenom'}}) }}
                {% if form_errors(addClient.nom_prenom) %}
                    <div class="alert alert-danger">
                        {{ form_errors(addClient.nom_prenom) }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-2">
                {{ form_widget(addClient.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                {% if form_errors(addClient.adresse) %}
                    <div class="alert alert-danger">
                        {{ form_errors(addClient.adresse) }}
                    </div>
                {% endif %}
            </div>
            <div class="mb-2">
                {{ form_widget(addClient.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                {% if form_errors(addClient.ville) %}
                    <div class="alert alert-danger">
                        {{ form_errors(addClient.ville) }}
                    </div>
                {% endif %}
            </div>
            <div>
                {{ form_widget(addClient.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone'}}) }}
                {% if form_errors(addClient.phone) %}
                    <div class="alert alert-danger">
                        {{ form_errors(addClient.phone) }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(addClient.save, {'label': 'Confirmer', 'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(addClient)}}
        </div>

    </div>
  </div>
</div>
    



{# <a href="{{ path('generate_pdf') }}" class="btn btn-primary">Generate PDF</a> #}




{% endblock %}
